/**
 * Implementation of hook_ctools_plugin_dierctory() to let the system know
 * we implement task and task_handler plugins.
 */
function total_control_og_ctools_plugin_directory($module, $plugin) {
  if ($module == 'ctools') {
    return 'plugins_og/' . $plugin;
  }
}

