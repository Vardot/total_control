/* Helper function.  Removes view display. */
function _total_control_og_views_delete_display($form, &$form_state){
  $sid = $form_state['values']['sid'];
  
  // get the view
  $view = views_get_view('control_workflow');
  
  // delete the corresponding display
  unset($view->display['panel_pane_tcog_sid_'.$sid]);
  
  // save the view
  $view->save();
  
  return;
}