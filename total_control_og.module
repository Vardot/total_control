 */
function total_control_og_form_alter(&$form, $form_state, $form_id) {
  if (false) {
    $form['#submit'][] = '_total_control_og_views_add_display';
  }
  if (false) {
    $form['#submit'][] = '_total_control_og_views_delete_display';
  }
}

